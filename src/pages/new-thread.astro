---
import Layout from '../layouts/Layout.astro';
import ThreadCard from '../components/ThreadCard.astro';
---

<Layout title="New Thread">
  <main class="bg-[#f0efe6] min-h-screen py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-center mb-12 text-gray-800">Create New Thread</h1>
      
      <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
        <form>
          <div class="mb-4">
            <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Thread Title</label>
            <input type="text" id="title" name="title" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter thread title">
          </div>
          
          <div class="mt-6">
            <button type="submit" class="px-6 py-2 bg-amber-600 text-white rounded-md hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500">
              Create Thread
            </button>
          </div>
        </form>
      </div>
      
      <div class="mt-12">
        <h2 class="text-xl font-semibold text-center mb-6 text-gray-700">Thread Preview</h2>
        <ThreadCard title="My New Thread" isPublic={false} noteCount={0} />
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    --color-paper: #f0efe6;
  }
</style> 