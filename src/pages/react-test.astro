<script>
  // Set up the global save callback for React components
  window.noteSaveCallback = async function(newTitle, newContent) {
    try {
      console.log('React Islands: Saving note', { newTitle, newContent });
      
      // Simulate API call
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      // Show success toast
      window.dispatchEvent(new CustomEvent('toast', {
        detail: {
          message: 'Note saved successfully!',
          type: 'success'
        }
      }));
      
      return { success: true };
    } catch (error) {
      console.error('Error saving note:', error);
      throw error;
    }
  };
</script>
