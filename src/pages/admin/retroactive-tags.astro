---
// Admin page for retroactive auto-tag processing
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Retroactive Auto-Tags - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold text-gray-900 mb-8">Retroactive Auto-Tags</h1>
            
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <h2 class="text-xl font-semibold mb-4">Process All Notes</h2>
                <p class="text-gray-600 mb-4">
                    This will process ALL your existing notes that don't have tags yet. 
                    This might take a while if you have many notes.
                </p>
                <button 
                    id="processAllBtn" 
                    class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 disabled:bg-gray-400"
                >
                    Process All Notes
                </button>
                <div id="processAllResult" class="mt-4 hidden"></div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <h2 class="text-xl font-semibold mb-4">Process in Batches</h2>
                <p class="text-gray-600 mb-4">
                    Process notes in smaller batches. This is safer for large numbers of notes.
                </p>
                <div class="flex gap-4 items-center">
                    <label for="batchSize" class="text-sm font-medium">Batch Size:</label>
                    <input 
                        type="number" 
                        id="batchSize" 
                        value="10" 
                        min="1" 
                        max="50" 
                        class="border border-gray-300 rounded px-3 py-1 w-20"
                    >
                    <button 
                        id="processBatchBtn" 
                        class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 disabled:bg-gray-400"
                    >
                        Process Batch
                    </button>
                </div>
                <div id="processBatchResult" class="mt-4 hidden"></div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold mb-4">Results</h2>
                <div id="results" class="space-y-2"></div>
            </div>
        </div>
    </div>

    <script>
        const processAllBtn = document.getElementById('processAllBtn');
        const processBatchBtn = document.getElementById('processBatchBtn');
        const processAllResult = document.getElementById('processAllResult');
        const processBatchResult = document.getElementById('processBatchResult');
        const results = document.getElementById('results');

        function showResult(element, data, isError = false) {
            element.classList.remove('hidden');
            element.innerHTML = `
                <div class="p-4 rounded ${isError ? 'bg-red-50 border border-red-200' : 'bg-green-50 border border-green-200'}">
                    <h3 class="font-semibold ${isError ? 'text-red-800' : 'text-green-800'}">
                        ${isError ? 'Error' : 'Success'}
                    </h3>
                    <pre class="mt-2 text-sm ${isError ? 'text-red-700' : 'text-green-700'}">${JSON.stringify(data, null, 2)}</pre>
                </div>
            `;
        }

        function addToResults(data) {
            const resultDiv = document.createElement('div');
            resultDiv.className = 'p-3 bg-gray-50 rounded border';
            resultDiv.innerHTML = `
                <div class="text-sm">
                    <strong>${new Date().toLocaleTimeString()}</strong> - 
                    ${data.message || 'Process completed'}
                </div>
                <div class="text-xs text-gray-600 mt-1">
                    Processed: ${data.summary?.processed || 0} | 
                    Successful: ${data.summary?.successful || 0} | 
                    Errors: ${data.summary?.errors || 0}
                </div>
            `;
            results.appendChild(resultDiv);
        }

        // Process all notes
        processAllBtn.addEventListener('click', async () => {
            processAllBtn.disabled = true;
            processAllBtn.textContent = 'Processing...';
            
            try {
                const response = await fetch('/api/admin/retroactive-auto-tags', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const data = await response.json();
                showResult(processAllResult, data, !response.ok);
                addToResults(data);
            } catch (error) {
                showResult(processAllResult, { error: error.message }, true);
            } finally {
                processAllBtn.disabled = false;
                processAllBtn.textContent = 'Process All Notes';
            }
        });

        // Process batch
        processBatchBtn.addEventListener('click', async () => {
            const batchSize = document.getElementById('batchSize').value;
            processBatchBtn.disabled = true;
            processBatchBtn.textContent = 'Processing...';
            
            try {
                const response = await fetch('/api/admin/retroactive-auto-tags-batch', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ batchSize: parseInt(batchSize) })
                });
                
                const data = await response.json();
                showResult(processBatchResult, data, !response.ok);
                addToResults(data);
                
                // If there are more notes, enable the button again
                if (data.summary?.hasMore) {
                    processBatchBtn.textContent = 'Process Next Batch';
                } else {
                    processBatchBtn.textContent = 'All Done!';
                    processBatchBtn.disabled = true;
                }
            } catch (error) {
                showResult(processBatchResult, { error: error.message }, true);
                processBatchBtn.disabled = false;
                processBatchBtn.textContent = 'Process Batch';
            }
        });
    </script>
</body>
</html>
