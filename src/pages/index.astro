---
import Layout from '../layouts/Layout.astro';
import ThreadCard from '../components/ThreadCard.astro';
---

<Layout title="Harvous Demo">
  <main class="bg-[#f2f0e6] min-h-screen">
    <div class="container mx-auto px-4 py-16">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold mb-8 text-[#4A473D]">Welcome to your Harvous!</h1>
        <p class="text-lg text-[#666]">Showcasing the ThreadCard with overlapping notes</p>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <ThreadCard title="Research Findings" />
        
        <div class="mt-24">
          <ThreadCard title="Meeting Notes" />
        </div>
        
        <div class="mt-24">
          <ThreadCard title="Project Updates" />
        </div>
      </div>
      
      <div class="text-center mt-16">
        <a 
          href="/thread-demo" 
          class="inline-block px-6 py-3 bg-[#4A473D] text-white rounded-lg font-medium hover:bg-[#5a574d] transition-colors"
        >
          View Thread Demo
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    --color-paper: #f2f0e6;
  }
</style>
