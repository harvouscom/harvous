---
import MobileNavigationReact from "@/components/react/navigation/MobileNavigation.tsx";
import { NavigationProvider } from "@/components/react/navigation/NavigationContext.tsx";

export interface Props {
  spaces?: any[];
  threads?: any[];
  inboxCount?: number;
  currentSpace?: any;
  currentThread?: any;
  initials?: string;
  userColor?: string;
}

const { 
  spaces = [], 
  threads = [], 
  inboxCount = 0,
  currentSpace,
  currentThread,
  initials = 'U',
  userColor = 'paper'
} = Astro.props;

// Debug: Log the props received
console.log('MobileNavigation received props:', { initials, userColor });
---

<NavigationProvider client:load>
  <MobileNavigationReact 
    spaces={spaces}
    threads={threads}
    inboxCount={inboxCount}
    currentSpace={currentSpace}
    currentThread={currentThread}
    initials={initials}
    userColor={userColor}
  />
</NavigationProvider>



