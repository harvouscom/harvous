---
import MobileNavigationWrapper from "@/components/react/navigation/MobileNavigationWrapper.tsx";

export interface Props {
  spaces?: any[];
  threads?: any[];
  inboxCount?: number;
  currentSpace?: any;
  currentThread?: any;
  initials?: string;
  userColor?: string;
}

const { 
  spaces = [], 
  threads = [], 
  inboxCount = 0,
  currentSpace,
  currentThread,
  initials = 'U',
  userColor = 'paper'
} = Astro.props;

// Debug: Log the props received
console.log('MobileNavigation received props:', { 
  spaces: spaces?.length || 0, 
  threads: threads?.length || 0, 
  inboxCount, 
  currentSpace: currentSpace?.id || 'null', 
  currentThread: currentThread?.id || 'null', 
  initials, 
  userColor 
});
---

<MobileNavigationWrapper 
  client:load
  spaces={spaces}
  threads={threads}
  inboxCount={inboxCount}
  currentSpace={currentSpace}
  currentThread={currentThread}
  initials={initials}
  userColor={userColor}
/>



