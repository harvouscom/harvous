---
import FaXmarkIcon from "@fortawesome/fontawesome-free/svgs/solid/xmark.svg";
---

<div 
  x-cloak
  x-show="showToast"
  class="fixed top-3 left-3 right-3 mx-auto max-w-md z-50"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="transform translate-y-[-1rem]"
  x-transition:enter-end="transform translate-y-0"
  x-transition:leave="transition ease-in duration-300"
  x-transition:leave-start="transform translate-y-0"
  x-transition:leave-end="transform translate-y-[-1rem]"
  @toast.window="makeToast($event.detail.message || 'Notification', $event.detail.type || 'success')"
>
  <div 
    role="alert"
    x-bind:data-type="type"
    class="toast-card bg-white rounded-xl shadow-toast flex items-center gap-3 px-5 py-4"
  >
    <!-- Icon -->
    <div class="flex-shrink-0">
      <!-- Success Icon -->
      <svg 
        x-show="type === 'success'"
        class="w-5 h-5 text-green-600" 
        fill="currentColor" 
        viewBox="0 0 20 20"
      >
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      
      <!-- Error Icon -->
      <svg 
        x-show="type === 'error'"
        class="w-5 h-5 text-red-600" 
        fill="currentColor" 
        viewBox="0 0 20 20"
      >
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    </div>

    <!-- Message -->
    <div class="flex-1">
      <p 
        class="font-semibold text-lg leading-tight"
        x-bind:class="type === 'success' ? 'text-deep-gray' : 'text-red-600'"
        x-text="message"
      ></p>
    </div>

    <!-- Close button -->
    <button 
      class="flex-shrink-0 text-deep-gray hover:text-gray-600 transition-colors"
      @click="dismissToast()"
      aria-label="Close notification"
    >
      {/* @ts-ignore */}
      <FaXmarkIcon class="w-5 h-5 fill-current" />
    </button>
  </div>
</div>

<style>
  .shadow-toast {
    box-shadow: 
      0px 185px 52px 0px rgba(0,0,0,0),
      0px 119px 47px 0px rgba(0,0,0,0.01),
      0px 67px 40px 0px rgba(0,0,0,0.05),
      0px 30px 30px 0px rgba(0,0,0,0.09),
      0px 7px 16px 0px rgba(0,0,0,0.1);
  }
</style>