---
import IconButton from "@/components/IconButton.astro";
import CommentIcon from "@fortawesome/fontawesome-free/svgs/solid/comment.svg";
import TagIcon from "@fortawesome/fontawesome-free/svgs/solid/tag.svg";
import ThreadIcon from "@fortawesome/fontawesome-free/svgs/solid/layer-group.svg";
import HashtagIcon from "@fortawesome/fontawesome-free/svgs/solid/hashtag.svg";

interface Props {
  noteId: number | string;
}

const { noteId } = Astro.props;
---

<div 
  x-data="{ 
    activeDrawer: null,
    toggleDrawer(drawer) {
      if (this.activeDrawer === drawer) {
        this.activeDrawer = null;
        window.dispatchEvent(new CustomEvent('hide-drawer'));
      } else {
        this.activeDrawer = drawer;
        window.dispatchEvent(new CustomEvent('hide-drawer'));
        window.dispatchEvent(new CustomEvent('show-drawer', { detail: { drawer } }));
      }
    }
  }" 
  class="w-full inline-flex items-center justify-between"
  style="width: 100%;"
>
  <div class="flex items-center gap-3">
    <button 
      @click="toggleDrawer('comments')"
      :class="activeDrawer === 'comments' ? 'meta-chonk-btn-active' : 'meta-chonk-btn'"
    >
      <CommentIcon class="w-[15px] h-[15px]" />
      <span 
        :class="activeDrawer === 'comments' ? 'meta-text-active' : 'meta-text'" 
        data-counter="comments"
      >0</span>
    </button>
    
    <button 
      @click="toggleDrawer('tags')"
      :class="activeDrawer === 'tags' ? 'meta-chonk-btn-active' : 'meta-chonk-btn'"
    >
      <TagIcon class="w-[15px] h-[15px]" />
      <span 
        :class="activeDrawer === 'tags' ? 'meta-text-active' : 'meta-text'"
        data-counter="tags"
      >0</span>
    </button>
    
    <button 
      @click="toggleDrawer('threads')"
      :class="activeDrawer === 'threads' ? 'meta-chonk-btn-active' : 'meta-chonk-btn'"
    >
      <ThreadIcon class="w-[15px] h-[15px]" />
      <span 
        :class="activeDrawer === 'threads' ? 'meta-text-active' : 'meta-text'"
        data-counter="threads"
      >0</span>
    </button>
  </div>
  
  <div class="flex items-center">
    <button 
      @click="toggleDrawer('note-id')"
      :class="activeDrawer === 'note-id' ? 'meta-chonk-btn-active' : 'meta-chonk-btn'"
    >
      <HashtagIcon class="w-[15px] h-[15px]" />
      <span 
        :class="activeDrawer === 'note-id' ? 'meta-text-active' : 'meta-text'"
      >N{String(noteId).padStart(3, '0')}</span>
    </button>
  </div>
</div>

<style>
  .meta-chonk-btn {
    display: flex;
    padding: 6px 12px 10px 10px;
    justify-content: center;
    align-items: center;
    gap: 4px;
    border-radius: 6px;
    background: var(--color-paper, #EBE7DB);
    box-shadow: 0px -4px 0px 0px rgba(0, 0, 0, 0.10) inset;
    color: var(--color-stone-grey);
    fill: var(--color-stone-grey);
    transition: transform 0.1s ease, background-color 0.2s ease;
    min-width: fit-content;
    outline: none;
  }
  
  .meta-chonk-btn:focus {
    outline: none;
  }
  
  .meta-chonk-btn-active {
    display: flex;
    padding: 6px 12px 10px 10px;
    justify-content: center;
    align-items: center;
    gap: 4px;
    border-radius: 6px;
    background: var(--color-stone-grey, #78766F);
    box-shadow: 0px -4px 0px 0px rgba(0, 0, 0, 0.10) inset;
    color: var(--color-light-paper);
    fill: var(--color-light-paper);
    transition: transform 0.1s ease, background-color 0.2s ease;
    min-width: fit-content;
    outline: none;
  }
  
  .meta-chonk-btn-active:focus {
    outline: none;
  }
  
  .meta-chonk-btn:active {
    transform: translateY(1px);
    box-shadow: 0px -2px 0px 0px rgba(0, 0, 0, 0.10) inset;
  }
  
  .meta-chonk-btn-active:active {
    transform: translateY(1px);
    box-shadow: 0px -2px 0px 0px rgba(0, 0, 0, 0.10) inset;
  }
  
  .meta-text {
    text-edge: cap;
    font-family: "Reddit Mono";
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    color: var(--color-stone-grey, #78766F);
  }
  
  .meta-text-active {
    text-edge: cap;
    font-family: "Reddit Mono";
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    color: var(--color-light-paper, #F7F7F6);
  }
  
  .meta-chonk-btn svg,
  .meta-chonk-btn-active svg {
    fill: inherit;
    color: inherit;
  }
  
  @media (max-width: 400px) {
    .meta-chonk-btn,
    .meta-chonk-btn-active {
      padding: 6px 10px 10px 8px;
      gap: 3px;
    }
    
    .meta-text,
    .meta-text-active {
      font-size: 10px;
    }
  }
</style> 