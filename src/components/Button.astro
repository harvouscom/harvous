---
export interface Props {
  state?: "Default" | "Secondary" | "Delete";
  class?: string;
  [key: string]: any;
}

const { state = "Default", class: className = "" } = Astro.props;
---

<button
  data-outer-shadow
  class:list={[
    "group relative rounded-3xl cursor-pointer transition-[scale,shadow] duration-300",
    "pb-7 pt-6 px-6",
    "flex items-center justify-center",
    "font-sans font-semibold text-[18px] leading-[0] text-nowrap",
    "text-[var(--color-fog-white)]",
    "min-h-[60px] w-full",
    "shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]",
    className
  ]}
  style={state === "Default" ? "background-color: var(--color-blue)" : 
         state === "Secondary" ? "background-color: var(--color-stone-grey)" :
         "background-color: var(--color-red)"}
  {...Astro.props}
>
  <div class="relative shrink-0 transition-transform duration-125">
    <slot>Button</slot>
  </div>
  <div class="absolute inset-0 pointer-events-none rounded-3xl transition-shadow duration-125 shadow-[0px_-8px_0px_0px_rgba(0,0,0,0.1)_inset] group-active:!shadow-[0px_-2px_0px_0px_rgba(0,0,0,0.1)_inset]" />
</button>

<style>
  button[data-outer-shadow] {
    will-change: transform, box-shadow;
    transition:
      background-color 0.125s ease-in-out,
      box-shadow 0.125s ease-in-out;
    box-shadow:
      0px -8px 0px 0px hsla(0, 0%, 0%, 0.1) inset,
      0px 4px 4px 0px hsla(0, 0%, 0%, 0.25);
  }

  button:active {
    transform: scale(0.98);
  }

  button:active > div {
    translate: 0 0;
    transform: scale(0.98);
  }

  button:active[style*="var(--color-blue)"] {
    background-color: var(--color-navy) !important;
    box-shadow:
      0px -4px 0px 0px #0000001a inset,
      0px 0px 4px 0px #00000040,
      0px 4px 0px 0px #00000040 inset;
  }

  button:active[style*="var(--color-stone-grey)"] {
    background-color: var(--color-deep-grey) !important;
    box-shadow:
      0px -4px 0px 0px #0000001a inset,
      0px 0px 4px 0px #00000040,
      0px 4px 0px 0px #00000040 inset;
  }

  button:active[style*="var(--color-red)"] {
    background-color: #b30524 !important;
    box-shadow:
      0px -4px 0px 0px #0000001a inset,
      0px 0px 4px 0px #00000040,
      0px 4px 0px 0px #00000040 inset;
  }
</style>
