---
interface Props {
  color?: string;
  offset?: number;
  index?: number;
}

const { color, offset = 0, index = 0 } = Astro.props;

const style = color ? `border-color: rgba(0, 0, 0, 0.15); background-color: white;` : '';
const offsetStyle = `left: ${offset}px; --index: ${index};`;
---

<div class="note-card-placeholder" style={`${style} ${offsetStyle}`}>
</div>

<style>
  .note-card-placeholder {
    position: absolute;
    width: 140px;
    height: 140px;
    top: 0;
    background-color: white;
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 3px;
    box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.08);
    transform: rotate(4deg);
    z-index: calc(3 - var(--index, 0));
    transition: transform 0.2s ease-in-out;
  }
  
  .note-card-placeholder:hover {
    transform: rotate(4deg) translateY(-2px);
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.12);
  }
</style> 