---
interface Props {
  color?: string;
  offset?: number;
  index?: number;
  className?: string;
  style?: string;
}

const { color, offset = 0, index = 0, className = "", style = "" } = Astro.props;

const colorStyle = color ? `border-color: rgba(0, 0, 0, 0.15); background-color: white;` : '';
const offsetStyle = `left: ${offset}px; --index: ${index};`;
const combinedStyle = `${colorStyle} ${offsetStyle} ${style}`;
---

<div class={`note-card-placeholder ${className}`} style={combinedStyle}>
</div>

<style>
  .note-card-placeholder {
    position: absolute;
    width: 140px;
    height: 140px;
    top: 0;
    background-color: var(--Snow-White, #FAFAFA);
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 12px;
    box-shadow: -4px 0px 4px 0px rgba(0, 0, 0, 0.05), 0px 2px 4px 0px rgba(0, 0, 0, 0.05);
    transform: rotate(4deg);
    z-index: calc(3 - var(--index, 0));
    transition: box-shadow 0.3s ease-out, transform 0.3s ease-out;
    transition-delay: var(--delay, 0ms);
    will-change: transform, box-shadow;
  }
  
  .note-card-placeholder.hover-active {
    box-shadow: -4px 0px 8px 0px rgba(0, 0, 0, 0.08), 0px 8px 12px 0px rgba(0, 0, 0, 0.15);
    transform: rotate(4deg) translateY(-4px);
  }
</style> 