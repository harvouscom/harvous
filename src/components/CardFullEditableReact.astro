---
import CardFullEditable from './react/CardFullEditable';

export interface Props {
  title: string;
  content: string;
  date: string;
  noteId?: string;
  noteType?: 'default' | 'scripture' | 'resource';
  className?: string;
}

const { title, content, date, noteId, noteType = 'default', className } = Astro.props;
---

<!-- React version of CardFullEditable -->
<CardFullEditable 
  title={title}
  content={content}
  date={date}
  noteId={noteId}
  noteType={noteType}
  className={className}
  client:load 
/>
