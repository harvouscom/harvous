---
import DrawerReact from "./react/Drawer";

interface Props {
  id?: string;
  title?: string;
  class?: string;
  isOpen?: boolean;
  onClose?: () => void;
}

const { id = "drawer", title = "Drawer", class: className = "", isOpen, onClose } = Astro.props;
---

<DrawerReact
  id={id}
  title={title}
  className={className}
  isOpen={isOpen}
  onClose={onClose}
  client:only="react"
>
  <slot />
</DrawerReact>
