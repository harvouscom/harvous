---
import MobileAdditionalReact from "./react/MobileAdditional";

export interface Props {
  contentType?: "thread" | "note" | "space" | "dashboard" | "profile";
  contentId?: string;
  currentThread?: any;
  currentSpace?: any;
}

const { contentType = "dashboard", contentId, currentThread, currentSpace } = Astro.props;
---

<MobileAdditionalReact
  contentType={contentType}
  contentId={contentId}
  currentThread={currentThread}
  currentSpace={currentSpace}
  client:only="react"
/>
