---
import FaPlusIcon from "@fortawesome/fontawesome-free/svgs/solid/plus.svg";
---

<button
  class="cursor-pointer bg-[var(--color-blue)] p-2 w-16 h-16 rounded-3xl flex items-center justify-center"
  {...Astro.props}
>
  <FaPlusIcon class="w-6 h-6 fill-white" />
</button>

<style>
  button {
    box-shadow:
      0px -8px 0px 0px hsla(0, 0%, 0%, 0.1) inset,
      0px 4px 4px 0px hsla(0, 0%, 0%, 0.25);
    transition:
      background-color 0.125s ease-in-out,
      box-shadow 0.125s ease-in-out;
  }

  button:active {
    background-color: var(--color-navy);
    box-shadow:
      0px -8px 0px 0px #0000001a inset,
      0px 0px 4px 0px #00000040;
  }
</style>
