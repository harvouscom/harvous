---
import FaXmarkIcon from "@fortawesome/fontawesome-free/svgs/solid/xmark.svg";

interface Props {
  message: string;
  type?: "info" | "error";
}

const { message, type = "info" } = Astro.props;
---

<section role="alert" data-type={type} class="toast text-white rounded-lg max-w-[366px] mx-auto py-4.5 px-5 grid grid-cols-[1fr_auto] gap-3 items-center">
  <p class="text-subtitle">{message}</p>
  <FaXmarkIcon class="w-4 h-4 fill-white" />
</section>

<style>
    .toast[data-type="info"] {
      background-color: var(--color-stone-grey);
      box-shadow: 0px 4px 4px 0px #00000040;
    }

    .toast[data-type="error"] {
      background-color: var(--color-red);
      box-shadow: 0px 4px 4px 0px #00000040;
    }
</style>