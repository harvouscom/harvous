---
interface Props {
  text: string;
  size?: "medium" | "large";
  variant?: "default" | "warning";
}

const {
  text,
  size = "medium",
  variant = "default"
}: Props = Astro.props;

const BUTTON_SIZE_MAP = {
  medium: "pt-3 pb-4 px-3 text-[14px]",
  large: "pt-6 pb-7 px-6 text-[18px]",
};

const VARIANT = {
  default: "bg-(--color-stone-grey) active:bg-(--color-deep-grey) text-(--color-white)",
  warning: "bg-(--color-red) active:bg-(--color-red) text-(--color-white)",
};
---

<button class={`button-inner-shadow rounded-lg flex flex-col items-center gap-2 active:scale-[.99] transition-transform duration-125 ${BUTTON_SIZE_MAP[size]} ${VARIANT[variant]}`}>
  <div class="flex flex-col items-center gap-2">
    <slot />
    <p class="font-sans font-medium text-inherit leading-[100%] tracking-normal">{text}</p>
  </div>
</button>

<style>
  button {
    box-shadow: 0px -4px 0px 0px #00000040 inset;

    & > div {
      transition: transform 125ms;
    }

    &:active > div {
      transform: translateY(1px);
    }
  }

  button:active {
    box-shadow:
      0px -2px 0px 0px #0000001a inset,
      0px 0px 2px 0px #00000040,
      0px 2px 0px 0px #00000040 inset;
  }

  p {
    /**
     * We were encountering a bug where the transition was jumpy
     * on button press.
     */
    /* text-box: trim-both cap alphabetic; */
  }
</style>