---
import CardFeatReact from "@/components/react/CardFeat";

export interface Props {
  variant?: "Thread" | "Note" | "NoteImage";
  title?: string;
  content?: string;
  imageUrl?: string;
  count?: number;
  color?: string;
  class?: string;
  lastUpdated?: string;
  isPrivate?: boolean;
}

const { 
  variant = "Note", 
  title, 
  content, 
  imageUrl, 
  count,
  color,
  class: className = "",
  lastUpdated,
  isPrivate = true
} = Astro.props;
---

<CardFeatReact
  variant={variant}
  title={title}
  content={content}
  imageUrl={imageUrl}
  count={count}
  color={color}
  className={className}
  lastUpdated={lastUpdated}
  isPrivate={isPrivate}
  client:load
/>
