---
import SearchInputReact from "./react/SearchInput";

interface Props {
    className?: string;
    placeholder?: string;
    value?: string;
    onChange?: (value: string) => void;
    onClear?: () => void;
}

const { className = "", placeholder = "Search", value, onChange, onClear, ...props } = Astro.props;
---

<SearchInputReact
    className={className}
    placeholder={placeholder}
    value={value}
    onChange={onChange}
    onClear={onClear}
    client:only="react"
    {...props}
/>
