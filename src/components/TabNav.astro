---
export interface Props {
  tabs: Array<{
    id: string;
    label: string;
    isActive?: boolean;
  }>;
  onTabChange?: (tabId: string) => void;
  class?: string;
}

const { tabs, class: className = "" } = Astro.props;
---

<div 
  class:list={[
    "tab-nav-container",
    className
  ]}
>
  <!-- Tab Navigation -->
  <div class:list={[
    "flex items-center justify-start gap-0 pb-0 px-1 relative shrink-0"
  ]}>
    {tabs.map((tab) => (
      <button
        class:list={[
          "flex gap-2 h-11 items-center justify-center overflow-clip px-2 py-3 relative shrink-0 transition-all duration-200",
          tab.isActive ? "opacity-100" : "opacity-50 hover:opacity-75"
        ]}
        data-tab-id={tab.id}
        data-active={tab.isActive ? "true" : "false"}
        data-tab-button
      >
        <span class="font-sans font-semibold text-[14px] leading-[0] relative shrink-0 text-nowrap text-[#4a473d]">
          {tab.label}
        </span>
      </button>
    ))}
  </div>
</div>

<style>
  .tab-nav-container {
    border: none !important;
    box-shadow: none !important;
  }
  
  .tab-nav-container * {
    border: none !important;
    box-shadow: none !important;
  }
  
  .tab-nav-container button {
    border: none !important;
    box-shadow: none !important;
    outline: none !important;
  }
  
  /* Target parent containers that might have borders */
  .flex.flex-col.gap-3 {
    border: none !important;
    box-shadow: none !important;
  }
  
  .tab-nav-container button[data-active="true"] {
    position: relative;
  }

  .tab-nav-container button[data-active="true"]::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background-color: var(--color-deep-grey);
    border-radius: 2px;
  }

  .tab-nav-container button:hover {
    cursor: pointer;
  }
</style>
