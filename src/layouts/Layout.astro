---
import "../styles/global.css";
import "@fontsource/reddit-sans/400.css";
import "@fontsource/reddit-sans/500.css";
import "@fontsource/reddit-sans/600.css";
import "@fontsource/reddit-mono/500.css";
import "@fontsource/reddit-mono/600.css";
import "trix/dist/trix.css";
import Toast from "@/components/Toast.astro";

interface Props {
  classNames?: string;
  title?: string;
}

const { classNames = '', title = 'Harvous' }: Props = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-(--color-soft-paper)">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#EEECE3" />
    <!-- Apple specific tags for homescreen icons -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Harvous" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body 
    x-data="toast"
    class={`font-sans ${classNames}`}
  >
    <Toast />

    <slot />
  </body>
</html>

<script>  
  import Alpine from "alpinejs";
  // @ts-ignore - no types for this plugin
  import collapse from "@alpinejs/collapse";
  // @ts-ignore - no types for this plugin
  import focus from "@alpinejs/focus";
  
  Alpine.plugin(collapse) 
  Alpine.plugin(focus)
  window.Alpine = Alpine;
  
  document.addEventListener('alpine:init', () => {
    Alpine.data('toast', () => ({
      showToast: false,
      message: '',
      type: 'info' as "info" | "error",
      makeToast(message: string, type: "info" | "error") {
        this.showToast = true;
        this.message = message;
        this.type = type;
      },
      dismissToast() {
        this.showToast = false;
        setTimeout(() => {
          this.message = '';
          this.type = 'info';
        }, 300);
      },
      init() {
        this.$nextTick(() => {
          // If message is set in the URL params, then make a toast.
          const urlParams = new URLSearchParams(window.location.search);
          const message = urlParams.get('toast');
          if (message) {
            this.makeToast(message, 'info');
          }

          // Now, clear the toast from the URL params.
          const newUrl = new URL(window.location.href);
          newUrl.searchParams.delete('toast');
          window.history.replaceState({}, '', newUrl);
        });
      }
    }));
  });

  Alpine.start();
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
