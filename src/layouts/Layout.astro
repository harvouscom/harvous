---
import "../styles/global.css";
import "@fontsource/reddit-sans/400.css";
import "@fontsource/reddit-sans/500.css";
import "@fontsource/reddit-sans/600.css";
import "@fontsource/reddit-mono/500.css";
import "@fontsource/reddit-mono/600.css";
import "sonner/dist/styles.css";
import ToastProvider from "@/components/react/ToastProvider.tsx";
import SquareButton from "@/components/SquareButton.astro";
import NewNotePanelSimple from "@/components/NewNotePanelSimple.astro";
import NewThreadPanelReact from "@/components/react/NewThreadPanel.tsx";
import NoteDetailsPanel from "@/components/react/NoteDetailsPanel.tsx";
import EditThreadPanel from "@/components/react/EditThreadPanel.tsx";
import DesktopPanelManager from "@/components/react/DesktopPanelManager.tsx";
import BottomSheetReact from "@/components/BottomSheetReact.astro";
import KeyboardShortcutsInit from "@/components/react/KeyboardShortcutsInit.tsx";
import PostHog from "@/components/posthog.astro";
import PostHogUserInit from "@/components/react/PostHogUserInit.tsx";
import { shouldShowMoreButton } from "@/utils/menu-options";
import { ClientRouter, fade } from "astro:transitions";
// Initialize toast utility globally
import "@/utils/toast";

interface Props {
  classNames?: string;
  title?: string;
  contentType?: "thread" | "note" | "space" | "dashboard" | "profile";
  contentId?: string;
  currentThread?: any;
  currentSpace?: any;
  currentNote?: any;
  userId?: string;
  userData?: {
    email?: string;
    name?: string;
    displayName?: string;
    userColor?: string;
  };
}

const { 
  classNames = '', 
  title = 'Harvous', 
  contentType = 'dashboard', 
  contentId, 
  currentThread, 
  currentSpace, 
  currentNote,
  userId,
  userData
}: Props = Astro.props;

// Determine if More button should be shown (pass contentId to hide for unorganized thread)
const showMoreButton = shouldShowMoreButton(contentType, contentId);

---

<!doctype html>
<html lang="en" class="bg-[var(--color-light-paper)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#F3F2EC" />
    <!-- Apple specific tags for homescreen icons -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Harvous" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- PostHog Analytics (Official Astro Integration) -->
    <PostHog />
    
    <!-- Enable View Transitions for client-side navigation -->
    <ClientRouter />
    
    <!-- Critical CSS inlined for faster first paint -->
    <style>
      /* Essential styles to prevent layout shift */
      body {
        margin: 0;
        opacity: 1 !important;
        animation: none !important;
        background-color: var(--color-light-paper);
        font-display: swap;
      }
      /* High-priority animation optimizations */
      .thread-card, .note-card-placeholder, .close-tab-btn {
        will-change: transform;
        contain: content;
        touch-action: manipulation;
      }
    </style>
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/scripts/pwa-startup.js" as="script">
    
    <!-- PWA startup optimization script - inlined for faster execution -->
    <script is:inline src="/scripts/pwa-startup.js"></script>
    
    <!-- Special tab interaction handler for first-touch optimization -->
    <script is:inline src="/scripts/tab-interaction-handler.js"></script>
    
    <!-- Alpine.js CDN for SquareButton menu functionality -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Font Awesome CSS for note type icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    
    <!-- Avatar Manager Global Script -->
    <script is:inline src="/scripts/avatar-manager-global.js"></script>
    
    <!-- Profile Data Sync Script -->
    <script is:inline src="/scripts/profile-sync.js"></script>
    
    <!-- Development environment fixes -->
    <script>
      // Only run in development
      if (import.meta.env.DEV) {
        // Override module script loading to handle MIME type issues
        const originalCreateElement = document.createElement;
        document.createElement = function(tagName: string) {
          const element = originalCreateElement.call(this, tagName);
          if (tagName === 'script' && (element as HTMLScriptElement).type === 'module') {
            element.addEventListener('error', function(e) {
              // Don't prevent the error, but log it as a warning
              console.warn('Module script loading issue (development):', e);
            });
          }
          return element;
        };
        
        // Suppress specific MIME type errors in console
        const originalConsoleError = console.error;
        console.error = function(...args) {
          const message = args[0];
          if (typeof message === 'string' && 
              (message.includes('Failed to load module script') || 
               message.includes('MIME type'))) {
            console.warn('Development MIME type issue (suppressed):', ...args);
            return;
          }
          originalConsoleError.apply(console, args);
        };
      }
    </script>
    
    <!-- Tab functionality script -->
    <script is:inline src="/scripts/tabs/tab-manager.js"></script>
    

  </head>
  <body
    class={`font-sans bg-[var(--color-light-paper)] ${classNames}`}
  >
    <ToastProvider client:load />
    <KeyboardShortcutsInit client:load />
    <PostHogUserInit client:idle userId={userId} userData={userData} />

    <div class="h-[100svh] p-3 min-[1160px]:p-6" transition:animate={fade({ duration: '0.1s' })}>
      <!-- Desktop Layout (1160px and wider) -->
      <div class="hidden min-[1160px]:grid min-[1160px]:grid-cols-[minmax(280px,clamp(280px,20vw,300px))_minmax(380px,640px)_minmax(380px,640px)] min-[1160px]:gap-6 min-[1160px]:h-full min-[1160px]:min-h-0">        <!-- Navigation Column -->
        <section class="h-full min-h-0">
          <div 
            slot="navigation" 
            class="h-full"
            data-thread-id={currentThread?.id}
            data-thread-title={currentThread?.title}
            data-thread-color={currentThread?.color}
            data-thread-note-count={currentThread?.noteCount}
            data-thread-background-gradient={currentThread?.backgroundGradient}
            data-space-id={currentSpace?.id}
            data-space-title={currentSpace?.title}
            data-space-color={currentSpace?.color}
            data-space-item-count={currentSpace?.totalItemCount}
            data-space-background-gradient={currentSpace?.backgroundGradient}
            data-content-type={contentType}
            data-content-id={contentId}
            data-parent-thread-id={currentThread?.id}
            data-parent-thread-title={currentThread?.title}
            data-parent-thread-count={currentThread?.noteCount}
            data-parent-thread-background-gradient={currentThread?.backgroundGradient}
            data-parent-thread-color={currentThread?.color}
          >
            <slot name="navigation" />
          </div>
        </section>

        <!-- Main Column -->
        <section class="h-full min-h-0">
          <div class="h-full min-h-0">
            <slot name="main" />
          </div>
        </section>

        <!-- Additional Column -->
        <section class="h-full min-h-0 desktop-additional-column">
          <slot name="additional">
            <!-- React Panel Management -->
            <div class="flex flex-col items-left h-full min-h-0" style="max-height: 100%;">
              <!-- SquareButtons (shown when no panel is open) -->
              <div id="square-buttons-container" class={`flex flex-col items-left h-full ${showMoreButton ? 'justify-between' : 'justify-end'}`}>
                {showMoreButton && (
                  <SquareButton variant="More" withMenu={true} contentType={contentType} contentId={contentId} currentThreadId={currentThread?.id} />
                )}
                {contentType !== 'profile' && (
                  <SquareButton variant="Add" withMenu={true} />
                )}
              </div>
              <!-- React Panel Manager -->
              <DesktopPanelManager
                currentThread={currentThread}
                currentSpace={currentSpace}
                currentNote={currentNote}
                contentType={contentType}
                client:load
              />
            </div>
          </slot>
        </section>
      </div>

      <!-- Mobile/Tablet Layout (below 1160px) -->
      <div class="min-[1160px]:hidden flex flex-col gap-3 h-full min-h-0 overflow-hidden">
        <!-- Navigation Column (Top) -->
        <div class="w-full shrink-0">
          <slot name="mobile-navigation" />
        </div>
        
        <!-- Main Column (Middle) -->
        <div class="flex-1 min-h-0 overflow-hidden">
          <slot name="main" />
        </div>
        
        <!-- Additional Column (Bottom) -->
        <div class="px-3 shrink-0">
          <slot name="mobile-additional" />
        </div>
      </div>
    </div>

    <!-- Mobile Bottom Sheet System -->
    <div class="min-[1160px]:hidden">
      <BottomSheetReact 
        currentThread={currentThread}
        currentSpace={currentSpace}
        currentNote={currentNote}
        contentType={contentType}
      />
    </div>
  </body>
</html>


<!-- Service Worker Registration for PWA -->
<script is:inline src="/scripts/service-worker-manager.js"></script>

<!-- Global Alpine.js re-initialization for View Transitions -->
<script>
  // Simple Alpine.js re-initialization after View Transitions
  document.addEventListener('astro:page-load', () => {
    if ((window as any).Alpine) {
      (window as any).Alpine.initTree(document.body);
    }
  });
  
  // Ensure React islands properly re-hydrate after View Transitions
  // This is especially important for navigation slot updates
  document.addEventListener('astro:after-swap', () => {
    // Small delay to ensure DOM is fully swapped and ready
    requestAnimationFrame(() => {
      // Check if navigation slot exists and has content
      const navigationSlot = document.querySelector('[slot="navigation"]');
      if (navigationSlot) {
        // Ensure any React islands within the navigation slot are properly hydrated
        const islands = navigationSlot.querySelectorAll('astro-island');
        islands.forEach((island) => {
          // Astro automatically handles hydration, but we ensure timing is correct
          // The island should already be hydrating, this just ensures it completes
        });
      }
    });
  });
</script>

<!-- Astro Navigation Setup -->
<!-- Note: Navigation is now set up via KeyboardShortcutsInit component -->

<!-- Toast Initialization (ensure window.toast is available on client) -->
<!-- Note: toast utility is already imported in frontmatter, this is just a safety check -->
<script>
  // Toast utility is already initialized via frontmatter import
  // This script just confirms it's available
  if (typeof window !== 'undefined' && !(window as any).toast) {
    console.warn('[Toast Init] window.toast not available - toast utility may not have loaded');
  }
</script>
<!-- Toast Handler -->
<script is:inline src="/scripts/toast-handler.js"></script>

<!-- Custom Toast event listener -->
<script>
  window.addEventListener('showToast', (event: Event) => {
    const customEvent = event as CustomEvent<{ message: string; type: 'success' | 'error' | 'info' | 'warning' }>;
    const { message, type } = customEvent.detail;
    if (window.toast && type in window.toast) {
      const toastMethod = window.toast[type as keyof typeof window.toast];
      if (typeof toastMethod === 'function') {
        toastMethod(message);
      }
    } else {
      console.warn('Toast system not available to handle showToast event.');
    }
  });
</script>

<!-- Note: toast utility is also imported in frontmatter to initialize window.toast -->

<!-- Navigation History Script -->
<script is:inline src="/scripts/navigation/history-tracker.js" data-astro-rerun></script>


<!-- Hide unorganized thread if it's been closed -->
<script is:inline src="/scripts/navigation/unorganized-handler.js"></script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    overflow: hidden; /* Prevent page-level scrolling */
    background-color: var(--color-light-paper);
    -webkit-background-color: var(--color-light-paper);
  }
  
  /* iOS Safari specific fixes for status bar area */
  @supports (-webkit-touch-callout: none) {
    html {
      background-color: var(--color-light-paper) !important;
      -webkit-background-color: var(--color-light-paper) !important;
    }
    
    body {
      background-color: var(--color-light-paper) !important;
      -webkit-background-color: var(--color-light-paper) !important;
      /* Ensure background extends behind status bar */
      padding-top: env(safe-area-inset-top);
      min-height: calc(100vh + env(safe-area-inset-top));
    }
  }
  
  /* Ensure mobile browsers fill the entire screen */
  @media (max-width: 1159px) {
    html, body {
      min-height: 100vh;
      min-height: 100svh;
    }
    
    /* iOS specific mobile fixes */
    @supports (-webkit-touch-callout: none) {
      body {
        min-height: calc(100vh + env(safe-area-inset-top));
        min-height: calc(100svh + env(safe-area-inset-top));
      }
    }
  }

  /* Mobile Drawer Responsive Styles */
  
  /* Hide desktop additional column on mobile */
  @media (max-width: 1159px) {
    .desktop-additional-column {
      display: none !important;
    }
    
    /* Ensure mobile drawer is visible */
    .mobile-drawer {
      display: block !important;
    }
  }
  
  /* Show desktop additional column on desktop */
  @media (min-width: 1160px) {
    .desktop-additional-column {
      display: block !important;
    }
    
    /* Hide mobile drawer on desktop */
    .mobile-drawer {
      display: none !important;
    }
  }
  
  /* Mobile drawer specific styles */
  .mobile-drawer {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 50;
  }
  
  /* Prevent body scroll when drawer is open */
  body.drawer-open {
    overflow: hidden;
  }
  
  /* Mobile drawer panel styles - bottom sheet */
  .mobile-drawer .drawer-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: calc(100vh - 128px);
    top: 128px;
    background: white;
    border-radius: 24px 24px 0 0;
    box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: translateY(100%);
    transition: transform 0.3s ease-out;
  }
  
  .mobile-drawer .drawer-panel.open {
    transform: translateY(0);
  }
  
  /* Backdrop styles */
  .mobile-drawer .backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s ease-out;
  }
  
  .mobile-drawer .backdrop.open {
    opacity: 1;
  }
  
  /* Ensure NewNotePanel appears instantly without fade */
  .new-note-panel-container {
    opacity: 1 !important;
    transition: none !important;
    animation: none !important;
    height: 100% !important;
    max-height: 100% !important;
    overflow: hidden !important;
    display: flex !important;
    flex-direction: column !important;
  }
  
  .new-note-panel-container * {
    opacity: 1 !important;
    transition: none !important;
    animation: none !important;
  }
  
  /* Override any potential React component fade effects */
  .new-note-panel {
    opacity: 1 !important;
    transition: none !important;
    animation: none !important;
  }
  
  /* Force instant visibility changes for NewNotePanel */
  .new-note-panel-container[x-cloak] {
    display: none !important;
  }
  
  /* Override any Alpine.js transition effects */
  .new-note-panel-container[x-transition] {
    transition: none !important;
  }
  
  /* Force instant show/hide for NewNotePanel */
  .new-note-panel-container[x-show="true"] {
    opacity: 1 !important;
    transition: none !important;
  }
  
  .new-note-panel-container[x-show="false"] {
    opacity: 0 !important;
    transition: none !important;
  }
</style>

<!-- Persistent Navigation Renderer -->
<script is:inline src="/scripts/navigation/persistent-navigation.js"></script>

