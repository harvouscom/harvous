    history.forEach((item, index) => {
      const itemElement = document.createElement('div');
      itemElement.className = 'relative group';
      itemElement.innerHTML = `
        <a href="/${item.id}" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 transition-colors">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 rounded-full flex items-center justify-center text-white text-sm font-medium" style="background: ${item.backgroundGradient}">
              ${item.title.charAt(0).toUpperCase()}
            </div>
            <div>
              <div class="font-medium text-gray-900">${item.title}</div>
              <div class="text-sm text-gray-500">${item.type}</div>
            </div>
          </div>
          <div class="close-icon absolute top-1/2 right-5 transform -translate-y-1/2 flex items-center justify-center w-6 h-6 cursor-pointer" onclick="handlePersistentCloseClick(event, this)" data-item-id="${item.id}">
            <svg class="w-4 h-4 fill-current" style="color: var(--color-deep-grey);" viewBox="0 0 384 512">
              <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/>
            </svg>
          </div>
        </a>
      `;
      container.appendChild(itemElement);
    });
    
    console.log(`ðŸ§ª Rendered ${history.length} items in persistent navigation`);
  };
  
  // Fallback close function for when main script isn't loaded
  window.handlePersistentCloseClick = function(event, element) {
    console.log('ðŸ”¥ Fallback handlePersistentCloseClick called');
    event.stopPropagation();
    event.preventDefault();
    
    const itemId = element.getAttribute('data-item-id');
    if (!itemId) return;
    
    console.log('ðŸ”¥ Fallback close clicked for item:', itemId);
    
    // Remove from navigation history manually
    const history = JSON.parse(localStorage.getItem('navigation-history') || '[]');
    const filteredHistory = history.filter(item => item.id !== itemId);
    localStorage.setItem('navigation-history', JSON.stringify(filteredHistory));
    
    console.log('ðŸ”¥ Fallback: Removed item from history');
    
    // Re-render persistent navigation
    if (window.manualRenderPersistentNavigation) {
      window.manualRenderPersistentNavigation();
    }
    
    // Navigate to dashboard
    if (window.astroNavigate) {
      window.astroNavigate('/dashboard');
    } else {
      window.location.replace('/dashboard');
    }
  };
  
  // Note: Fallback removeFromNavigationHistory function removed to prevent conflicts
  // The main removeFromNavigationHistory function should be used instead
  
  // Hide unorganized thread if it's been closed
  function hideUnorganizedThread() {
    console.log('ðŸ§ª hideUnorganizedThread called');
    const isClosed = localStorage.getItem('unorganized-thread-closed') === 'true';
    console.log('ðŸ§ª Is unorganized thread closed?', isClosed);
    
    if (isClosed) {
      const unorganizedElement = document.querySelector('[data-navigation-item="thread_unorganized"]');
      console.log('ðŸ§ª Found unorganized element:', unorganizedElement);
      if (unorganizedElement) {
        unorganizedElement.style.display = 'none';
        console.log('ðŸ”¥ Hiding unorganized thread (marked as closed)');
      } else {
        console.log('âŒ Unorganized element not found');
      }
    }
  }
  
  // Debug function to reset unorganized thread state
  window.resetUnorganizedThread = function() {
    localStorage.removeItem('unorganized-thread-closed');
    console.log('ðŸ§ª Reset unorganized thread state - should now be visible');
    // Re-run the hide function to check current state
    hideUnorganizedThread();
  };
  
  // Run hideUnorganizedThread immediately and on page events
  console.log('ðŸ§ª Running hideUnorganizedThread immediately from Layout');
  hideUnorganizedThread();
  
  document.addEventListener('DOMContentLoaded', () => {
    console.log('ðŸ§ª DOMContentLoaded - running hideUnorganizedThread from Layout');
    hideUnorganizedThread();
  });
  
  document.addEventListener('astro:page-load', () => {
    console.log('ðŸ§ª astro:page-load - running hideUnorganizedThread from Layout');
    hideUnorganizedThread();
  });
</script>

