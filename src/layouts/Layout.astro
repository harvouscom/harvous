              <!-- Default state: SquareButtons -->
              <div x-show="!showNoteDetailsPanel && !showNewNotePanel && !showNewThreadPanel" class={`flex flex-col items-left h-full ${showMoreButton ? 'justify-between' : 'justify-end'}`}>
                {showMoreButton && (
                  <SquareButton variant="More" withMenu={true} contentType={contentType} contentId={contentId} />
                )}
                {contentType !== 'profile' && (
                  <SquareButton variant="Add" withMenu={true} />
                )}
              </div>
              
              <!-- New Note Panel - Desktop Only -->
              <div 
                x-show="showNewNotePanel" 
                x-transition:enter=""
                x-transition:enter-start=""
                x-transition:enter-end=""
                x-transition:leave=""
                x-transition:leave-start=""
                x-transition:leave-end=""
                class="h-full new-note-panel-container hidden min-[1160px]:block"
              >
                <NewNotePanelSimple 
                  currentThread={currentThread} 
                  onClose={() => {
                    // Close the panel when NewNotePanel requests to close
                    window.dispatchEvent(new CustomEvent('closeNewNotePanel'));
                  }}
                />
              </div>
              
              <!-- New Thread Panel - Desktop Only -->
              <div x-show="showNewThreadPanel" class="h-full hidden min-[1160px]:block">
                <NewThreadPanelReact 
                  currentSpace={currentSpace} 
                  onClose={() => {
                    // Close the panel when NewThreadPanel requests to close
                    window.dispatchEvent(new CustomEvent('closeNewThreadPanel'));
                  }}
                  client:only="react"
                />
              </div>
              
              <!-- Note Details Panel (notes only) - Desktop Only -->
              {contentType === 'note' && currentNote && (
                <div x-show="showNoteDetailsPanel" class="h-full hidden min-[1160px]:block">
                  <NoteDetailsPanel 
                    noteId={currentNote.id} 
                    noteTitle={currentNote.title || "Note Details"} 
                    onClose={() => {
                      // Close the panel when NoteDetailsPanel requests to close
                      window.dispatchEvent(new CustomEvent('closeNoteDetailsPanel'));
                    }}
                  />
                </div>
              )}
              
            </div>
          </slot>
        </section>
      </div>

      <!-- Mobile/Tablet Layout (below 1160px) -->
      <div class="min-[1160px]:hidden flex flex-col gap-3 h-full">
        <!-- Navigation Column (Top) -->
        <div class="w-full">
          <slot name="mobile-navigation" />
        </div>
        
        <!-- Main Column (Middle) -->
        <div class="flex-1">
          <slot name="main" />
        </div>
        
        <!-- Additional Column (Bottom) -->
        <div class="px-3">
          <slot name="mobile-additional" />
        </div>
      </div>
    </div>

    <!-- Mobile Bottom Sheet System -->
    <div class="min-[1160px]:hidden">
