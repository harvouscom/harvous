---
import "../styles/global.css";
import "@fontsource/reddit-sans/400.css";
import "@fontsource/reddit-sans/500.css";
import "@fontsource/reddit-sans/600.css";
import "@fontsource/reddit-mono/500.css";
import "@fontsource/reddit-mono/600.css";
import "trix/dist/trix.css";
import Toast from "@/components/Toast-v2.astro";
import SquareButton from "@/components/SquareButton.astro";
import NewNotePanel from "@/components/NewNotePanel.astro";
import NewThreadPanel from "@/components/NewThreadPanel.astro";
import { shouldShowMoreButton } from "@/utils/menu-options";
import { ClientRouter, fade } from "astro:transitions";

interface Props {
  classNames?: string;
  title?: string;
  contentType?: "thread" | "note" | "space" | "dashboard" | "profile";
  contentId?: string;
  currentThread?: any;
  currentSpace?: any;
}

const { classNames = '', title = 'Harvous', contentType = 'dashboard', contentId, currentThread, currentSpace }: Props = Astro.props;

// Determine if More button should be shown
const showMoreButton = shouldShowMoreButton(contentType);
---

<!doctype html>
<html lang="en" class="bg-[var(--color-light-paper)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="var(--color-fog-white)" />
    <!-- Apple specific tags for homescreen icons -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Harvous" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Enable View Transitions for client-side navigation -->
    <ClientRouter />
    
    <!-- Critical CSS inlined for faster first paint -->
    <style>
      /* Essential styles to prevent layout shift */
      body {
        margin: 0;
        opacity: 1 !important;
        animation: none !important;
        background-color: var(--color-light-paper);
        font-display: swap;
      }
      /* High-priority animation optimizations */
      .thread-card, .note-card-placeholder, .close-tab-btn {
        will-change: transform;
        contain: content;
        touch-action: manipulation;
      }
      /* Critical UI elements */
      trix-editor {
        contain: content;
      }

    </style>
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/scripts/pwa-startup.js" as="script">
    
    <!-- PWA startup optimization script - inlined for faster execution -->
    <script is:inline src="/scripts/pwa-startup.js"></script>
    
    <!-- Special tab interaction handler for first-touch optimization -->
    <script is:inline src="/scripts/tab-interaction-handler.js"></script>
    
    <!-- Alpine.js CDN for SquareButton menu functionality -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Development environment fixes -->
    <script>
      // Only run in development
      if (import.meta.env.DEV) {
        // Override module script loading to handle MIME type issues
        const originalCreateElement = document.createElement;
        document.createElement = function(tagName: string) {
          const element = originalCreateElement.call(this, tagName);
          if (tagName === 'script' && (element as HTMLScriptElement).type === 'module') {
            element.addEventListener('error', function(e) {
              // Don't prevent the error, but log it as a warning
              console.warn('Module script loading issue (development):', e);
            });
          }
          return element;
        };
        
        // Suppress specific MIME type errors in console
        const originalConsoleError = console.error;
        console.error = function(...args) {
          const message = args[0];
          if (typeof message === 'string' && 
              (message.includes('Failed to load module script') || 
               message.includes('MIME type'))) {
            console.warn('Development MIME type issue (suppressed):', ...args);
            return;
          }
          originalConsoleError.apply(console, args);
        };
      }
    </script>
    

  </head>
  <body 
    class={`font-sans bg-[var(--color-light-paper)] ${classNames}`}
  >
    <Toast />

    <div class="h-[100svh] p-3 min-[1160px]:p-6" transition:animate={fade({ duration: '0.1s' })}>
      <!-- Desktop Layout (1160px and wider) -->
      <div class="hidden min-[1160px]:grid min-[1160px]:grid-cols-[minmax(280px,clamp(280px,20vw,300px))_minmax(380px,640px)_minmax(380px,640px)] min-[1160px]:gap-6 min-[1160px]:h-full">        <!-- Navigation Column -->
        <section class="h-full">
          <div 
            slot="navigation" 
            class="h-full"
            data-thread-id={currentThread?.id}
            data-thread-title={currentThread?.title}
            data-thread-color={currentThread?.color}
            data-thread-note-count={currentThread?.noteCount}
            data-thread-background-gradient={currentThread?.backgroundGradient}
            data-space-id={currentSpace?.id}
            data-space-title={currentSpace?.title}
            data-space-color={currentSpace?.color}
            data-space-item-count={currentSpace?.totalItemCount}
            data-space-background-gradient={currentSpace?.backgroundGradient}
            data-content-type={contentType}
            data-content-id={contentId}
          >
            <slot name="navigation" />
          </div>
        </section>

        <!-- Main Column -->
        <section class="h-full">
          <div class="h-full">
            <slot name="main" />
          </div>
        </section>

        <!-- Additional Column -->
        <section class="h-full">
          <slot name="additional">
            <div 
              class="flex flex-col items-left justify-between h-full"
              x-data="{ showNewNotePanel: false, showNewThreadPanel: false }"
              x-init="
                // Initialize panels as closed by default
                showNewNotePanel = false;
                showNewThreadPanel = false;
                
                // Check localStorage for panel state
                const savedNotePanel = localStorage.getItem('showNewNotePanel');
                const savedThreadPanel = localStorage.getItem('showNewThreadPanel');
                
                if (savedNotePanel === 'true') {
                  showNewNotePanel = true;
                }
                if (savedThreadPanel === 'true') {
                  showNewThreadPanel = true;
                }
                
                // Listen for NewNotePanel events
                window.addEventListener('openNewNotePanel', () => {
                  showNewNotePanel = true;
                  showNewThreadPanel = false;
                  localStorage.setItem('showNewNotePanel', 'true');
                  localStorage.setItem('showNewThreadPanel', 'false');
                });
                window.addEventListener('closeNewNotePanel', () => {
                  showNewNotePanel = false;
                  localStorage.setItem('showNewNotePanel', 'false');
                });
                
                // Listen for NewThreadPanel events
                window.addEventListener('openNewThreadPanel', () => {
                  showNewThreadPanel = true;
                  showNewNotePanel = false;
                  localStorage.setItem('showNewThreadPanel', 'true');
                  localStorage.setItem('showNewNotePanel', 'false');
                });
                window.addEventListener('closeNewThreadPanel', () => {
                  showNewThreadPanel = false;
                  localStorage.setItem('showNewThreadPanel', 'false');
                });
              "
            >
              <!-- Default state: SquareButtons -->
              <div x-show="!showNewNotePanel && !showNewThreadPanel" class={`flex flex-col items-left h-full ${showMoreButton ? 'justify-between' : 'justify-end'}`}>
                {showMoreButton && (
                  <SquareButton variant="More" withMenu={true} contentType={contentType} contentId={contentId} />
                )}
                {contentType !== 'profile' && (
                  <SquareButton variant="Add" withMenu={true} />
                )}
              </div>
              
              <!-- New Note Panel -->
              <div x-show="showNewNotePanel" class="h-full">
                <NewNotePanel currentThread={currentThread} />
              </div>
              
              <!-- New Thread Panel -->
              <div x-show="showNewThreadPanel" class="h-full">
                <NewThreadPanel currentSpace={currentSpace} />
              </div>
            </div>
          </slot>
        </section>
      </div>

      <!-- Mobile/Tablet Layout (below 1160px) -->
      <div class="min-[1160px]:hidden flex flex-col gap-3 h-full">
        <!-- Navigation Column (Top) -->
        <div class="w-full">
          <slot name="mobile-navigation" />
        </div>
        
        <!-- Main Column (Middle) -->
        <div class="flex-1">
          <slot name="main" />
        </div>
        
        <!-- Additional Column (Bottom) -->
        <div class="px-3">
          <slot name="mobile-additional" />
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  // Simple toast functionality without Alpine.js dependencies
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get('toast');
    if (message) {
      // Simple toast implementation
      const toast = document.createElement('div');
      toast.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50';
      toast.textContent = message;
      document.body.appendChild(toast);
      
      setTimeout(() => {
        toast.remove();
      }, 3000);
      
      // Clear URL params
      const newUrl = new URL(window.location.href);
      newUrl.searchParams.delete('toast');
      window.history.replaceState({}, '', newUrl);
    }
  });
</script>

<!-- Service Worker Registration for PWA -->
<script>
  // Register the service worker for PWA support
  if ('serviceWorker' in navigator) {
    window.addEventListener('load', () => {
      navigator.serviceWorker.register('/sw.js')
        .then(registration => {
          console.log('ServiceWorker registration successful');
          
          // Check if there's a waiting worker and offer update if needed
          if (registration.waiting) {
            // New service worker is waiting - could prompt user to refresh
          }
          
          // Listen for new updates
          registration.addEventListener('updatefound', () => {
            const newWorker = registration.installing;
            if (newWorker) {
              newWorker.addEventListener('statechange', () => {
                if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                  // New service worker available, could notify user
                }
              });
            }
          });
        })
        .catch(error => {
          console.log('ServiceWorker registration failed:', error);
        });
      
      // Warm up the app when it's launched or brought back from background
      // Handle visibility change for different browsers
      const isHidden = (): boolean => {
        if (typeof document.hidden !== "undefined") {
          return document.hidden;
        } else if (typeof (document as any).msHidden !== "undefined") {
          return (document as any).msHidden;
        } else if (typeof (document as any).webkitHidden !== "undefined") {
          return (document as any).webkitHidden;
        }
        return false;
      };
      
      // Get the correct visibility change event name
      let visibilityEvent = "visibilitychange";
      if (typeof (document as any).msHidden !== "undefined") {
        visibilityEvent = "msvisibilitychange";
      } else if (typeof (document as any).webkitHidden !== "undefined") {
        visibilityEvent = "webkitvisibilitychange";
      }
      
      // When the app becomes visible after being hidden (returned from background)
      document.addEventListener(visibilityEvent, () => {
        if (!isHidden()) {
          // App is visible again - warm up
          if (navigator.serviceWorker.controller) {
            navigator.serviceWorker.controller.postMessage('warmup');
          }
          
          // Preload critical UI components
          if ('requestIdleCallback' in window) {
            (window as any).requestIdleCallback(() => {
              // Prefetch common navigation paths when idle
              const prefetcher = document.createElement('link');
              prefetcher.rel = 'prefetch';
              prefetcher.href = '/dashboard';
              document.head.appendChild(prefetcher);
            });
          } else {
            // Fallback for browsers that don't support requestIdleCallback
            setTimeout(() => {
              const prefetcher = document.createElement('link');
              prefetcher.rel = 'prefetch';
              prefetcher.href = '/dashboard';
              document.head.appendChild(prefetcher);
            }, 1000);
          }
        }
      });
      
      // Also warm up on initial load
      if (navigator.serviceWorker.controller) {
        navigator.serviceWorker.controller.postMessage('warmup');
      }
    });
  }
  
  // Add to homescreen prompt handler
  let deferredPrompt: any;
  
  window.addEventListener('beforeinstallprompt', (e) => {
    // Prevent Chrome 67+ from automatically showing the prompt
    e.preventDefault();
    // Stash the event so it can be triggered later
    deferredPrompt = e;
  });
</script>

<!-- Global Alpine.js re-initialization for View Transitions -->
<script>
  // Simple Alpine.js re-initialization after View Transitions
  document.addEventListener('astro:page-load', () => {
    if ((window as any).Alpine) {
      (window as any).Alpine.initTree(document.body);
    }
  });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-light-paper);
    -webkit-background-color: var(--color-light-paper);
  }
</style>
