---
import "../styles/global.css";
import "@fontsource/reddit-sans/400.css";
import "@fontsource/reddit-sans/500.css";
import "@fontsource/reddit-sans/600.css";
import "@fontsource/reddit-mono/500.css";
import "@fontsource/reddit-mono/600.css";
import "trix/dist/trix.css";
import Toast from "@/components/Toast.astro";

interface Props {
  classNames?: string;
  title?: string;
}

const { classNames = '', title = 'Harvous' }: Props = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-(--color-soft-paper)">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#000000" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body 
    x-data="toast"
    class={`font-sans ${classNames}`}
  >
    <Toast />

    <slot />
  </body>
</html>

<script>  
  import Alpine from "alpinejs";
  // @ts-ignore - no types for this plugin
  import collapse from "@alpinejs/collapse";

  Alpine.plugin(collapse) 
  Alpine.start()
  
  window.Alpine = Alpine;
  
  document.addEventListener('alpine:init', () => {
    Alpine.data('toast', () => ({
      showToast: false,
      message: '',
      type: 'info' as "info" | "error",
      makeToast(message: string, type: "info" | "error") {
        this.showToast = true;
        this.message = message;
        this.type = type;
      },
      dismissToast() {
        this.showToast = false;
        setTimeout(() => {
          this.message = '';
          this.type = 'info';
        }, 300);
      }
    }));
  });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
